--- 
layout: partials/base.njk 
title: Welcome to_ 
---

<section class="md:container w-full mx-auto">
  <h1 class="font-accent text-darkBlue mx-auto my-20 text-lg text-center uppercase">{{ title }}</h1>
  <div class="md:container font-body text-darkFont flex flex-col justify-center mb-20">
    {% set mostRecentPost = collections.posts | reverse | first %}
    {% for post in collections.posts %}
      {% if post === mostRecentPost %}
        {% include "components/postDetails.njk" %}
        {% include "components/canvas.njk" %}
        {% for tag in post.data.tags %}
          {% include "components/tag.njk" %}
        {% endfor %}
      {% endif %}
    {% endfor %}
  </div>
</section>
{% if mostRecentPost.data.jsFile %}
  <script src="{{ mostRecentPost.data.jsFile }}"></script>
{% endif %}