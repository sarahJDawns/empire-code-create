layout: partials/base.njk 
title: Welcome to_ 
---

<section class="container mx-auto">
  <h1 class="font-accent my-20 uppercase text-darkBlue text-center text-lg mx-auto">{{ title }}</h1>
  <div class="md:container flex flex-col justify-center font-body text-darkFont mb-20">
    {% set mostRecentPost = collections.posts | reverse | first %}
    {% for post in collections.posts %}
      {% if post === mostRecentPost %}
        {% include "components/postDetails.njk" %}
        <article class="w-full py-8">
          {{ post.content | safe }}
        </article>
        {% for tag in post.data.tags %}
          {% include "components/tag.njk" %}
        {% endfor %}
      {% endif %}
    {% endfor %}
  </div>
</section>