{% extends 'layouts/partials/base.njk' %}




{% block content %}
  <article>
    <img src="{{ image }}" alt="{{ imageAlt }}">
    <h1>{{ title }}</h1>
    <p>
      <time>{{ date | postDate}}</time>
    </p>
    <p>{{description}}</p>
    <p>{{author}}</p>
    
    {{ content | safe }}

    <ul>
      {% for tag in tags %}
      <li>
        <a href="/blog/tag/{{ tag | slugify }}">{{ tag }}</a>
      </li>
      {% endfor %}
    </ul>
  </article>
{% endblock %}
