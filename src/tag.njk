--- 
pagination: 
  data: collections 
  size: 1 
  alias: tag 
  addAllPagesToCollections: true 
layout: partials/base.njk 
permalink: /archive/tag/{{tag | slugify }}
eleventyComputed: 
  title: Posts Tagged with {{tag}}
---

<section class="flex flex-col justify-center">
  <h1 class="text-red-500">{{ title }}
  </h1>
  {% for post in collections[tag] | reverse %}
    {% include "components/postDetails.njk" %}
  {% endfor %}
</section>