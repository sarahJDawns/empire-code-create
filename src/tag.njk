--- 
pagination: 
  data: collections 
  size: 1 
  alias: tag 
  addAllPagesToCollections: true 
layout: partials/base.njk 
permalink: "/tag/{{ tag | slug }}/"
eleventyComputed: 
  title: All About {{tag}}
---

<section class="w-full md:container mx-auto">
  <h1 class="font-accent my-20 uppercase text-darkBlue text-center text-lg mx-auto">{{ title }}</h1>
  <div class="md:container flex flex-col justify-center font-body text-darkFont mb-20">
    {% for post in collections[tag] | reverse %}
      <div class="border-b border-brightOrange py-3">
        {% include "components/postDetails.njk" %}
      </div>
    {% endfor %}
  </div>
</section>