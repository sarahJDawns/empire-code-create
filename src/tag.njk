--- 
pagination: 
  data: collections 
  size: 1 
  alias: tag 
  addAllPagesToCollections: true 
layout: partials/base.njk 
permalink: "/tag/{{ tag | slug }}/"
eleventyComputed: 
  title: All About {{tag}}
---

<section class="md:container w-full mx-auto">
  <h1 class="font-accent text-darkBlue mx-auto my-20 text-lg text-center uppercase">{{ title }}</h1>
  <div class="md:container font-body text-darkFont flex flex-col justify-center mb-20">
    {% for post in collections[tag] | reverse %}
      <div class="border-brightOrange py-3 border-b">
        {% include "components/postDetails.njk" %}
      </div>
    {% endfor %}
  </div>
</section>